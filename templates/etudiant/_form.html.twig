{% form_theme form 'bootstrap_4_layout.html.twig' %}
<div class="container register-form">
    <div class="form">
        <div class="note">
            <h1>Creation des Etudiants</h1>
        </div>
        <div class="form-content">
            <div class="row">

                <div class="col-md-6">
                    {{ form_start(form) }}
                    <div class="form-group">
                    {{ form_row(form.matricule ,{'attr':{'placeholder':"matricule"}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.nom ,{'attr':{'placeholder':"Entre votre nom"}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.telephone) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.date_naissance) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_row(form.type_etudiant) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.type_bourse) }}

                    </div>
                    <div class="form-group">
                        {{ form_row(form.adrese) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.chambre) }}
                    </div>
                    <button class="btn btn-success">{{ button_label|default('Enregistere') }}</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

</div>

